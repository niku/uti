Vagrant.configure(2) do |config|
  config.vm.box = "debian-8.2.0-amd64.box"
  config.vm.provision "shell", inline: <<-SHELL
    sudo update-locale LANG=C.UTF-8
    # Already configured in /etc/sudoers.d/99_vagrant
    # sudo sh -c "echo '${USER} ALL=(ALL) NOPASSWD:ALL' > /etc/sudoers.d/nopasswd" && sudo chmod 0440 /etc/sudoers.d/nopasswd
    sudo sh -c "echo 'deb http://ftp.jp.debian.org/debian jessie-backports main' > /etc/apt/sources.list.d/jessie-backports.list"
    sudo apt-get update
    sudo apt-get install -y docker.io
  SHELL
end
